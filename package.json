{
  "name": "html-file-manager",
  "version": "1.0.0",
  "description": "Desktop app for managing HTML files using Electron + React + TypeScript",
  "main": "dist/main/index.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\" \"npm run dev:electron\"",
    "dev:main": "tsc -p packages/main/tsconfig.json --watch",
    "dev:preload": "tsc -p packages/preload/tsconfig.json --watch",
    "dev:renderer": "vite packages/renderer --port 3000",
    "dev:electron": "wait-on -t 30000 http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p packages/main/tsconfig.json",
    "build:preload": "tsc -p packages/preload/tsconfig.json",
    "build:renderer": "cd packages/renderer && vite build",
    "start": "electron .",
    "pack": "electron-builder --publish=never",
    "dist": "npm run build && electron-builder",
    "lint": "eslint packages --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit -p packages/main/tsconfig.json && tsc --noEmit -p packages/preload/tsconfig.json && tsc --noEmit -p packages/renderer/tsconfig.json",
    "test": "vitest packages",
    "test:ui": "vitest --ui packages"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^19.1.10",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.2.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^1.2.0",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "framer-motion": "^11.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zod": "^3.22.4"
  },
  "build": {
    "appId": "com.htmlfilemanager.app",
    "productName": "HTML File Manager",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "mac": {
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "author": "HTML File Manager Team",
  "license": "MIT"
}
